<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Profile"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/slikaProfilaVozila"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_person"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_light"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naziv Modela"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/naziv_modela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:layout_marginLeft="60dp"
            android:textSize="18dp"
            android:textColor="@android:color/darker_gray"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vrsta vozila"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/vrsta_vozila"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:layout_marginLeft="76dp"
            android:textSize="18dp"
            android:textColor="@android:color/darker_gray"
            />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Godina Proizvodnje"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/godina_proizvodnje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:textColor="@android:color/darker_gray"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registracija"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/registracija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****"
            android:layout_marginLeft="77dp"
            android:textSize="18dp"
            android:textColor="@android:color/darker_gray"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registriran do"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/registriran_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="@string/email"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snaga"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/snaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dateofbirth"
            android:layout_marginLeft="124dp"
            android:textSize="18dp"
            android:textColor="@android:color/darker_gray"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nosivost"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/nosivost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dateofbirth"
            android:layout_marginLeft="104dp"
            android:textSize="18dp"
            android:textColor="@android:color/darker_gray"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/otvoriPovijestKvarova"
            android:background="@drawable/bg_btn"

            android:gravity="center"
            android:padding="20dp"
            android:text="Povijest kvarova"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>