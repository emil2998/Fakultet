<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_info" />

        <TextView
            android:id="@+id/datumKvara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/datumPopravka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view"
            android:text="Line 3"
            android:layout_below="@id/datumKvara"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hitnostKvara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/datumPopravka"
            android:layout_toEndOf="@id/image_view"
            android:text="Line 2" />
        <TextView
            android:id="@+id/opisKvara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hitnostKvara"
            android:layout_toEndOf="@id/image_view"
            android:text="Line 2" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>