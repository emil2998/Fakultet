<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OpisZavrsenogPosla"
    android:orientation="vertical"
    android:background="@color/rp_blue_very_light">
    <include layout="@layout/main_toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtNazivVozila"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vozilo"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txtNazivVozila2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naziv"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txtOpisKvara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis kvara"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txtOpisKvara2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txtOpisPopravka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis popravka"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editOpisPopravka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:hint="Unesite opis popravka.."/>
        <TextView
            android:id="@+id/txtDatum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editDatum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:hint="DD/MM/YYYY"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/btnZavrsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZavrÅ¡i"
            android:textSize="20dp">
        </Button>

    </LinearLayout>


</LinearLayout>